<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestMaui.SummonerInfoPage"
             BackgroundColor="#0a3d62">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Vos statistiques"
                       HorizontalOptions="Center"></Label>
                <Frame CornerRadius="15"
                       Padding="0"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <Image x:Name="profileIcon"
                           WidthRequest="120"
                           HeightRequest="120"
                    ></Image>
                </Frame>
                <Label x:Name="summonerLevelLabel"></Label>
                
                <StackLayout x:Name="Stats">
                    <Label x:Name="summonerNameLabel"></Label>
                    <Label x:Name="summonerTierLabel"></Label>
                    <Label x:Name="summonerRankLabel"></Label>
                    <Label x:Name="summonerWinsLabel"></Label>
                    <Label x:Name="summonerLossesLabel"></Label>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>